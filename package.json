{
  "name": "geopersonalized-content-push",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,scss,md}\"",
    "lint": "eslint .",
    "lint:check": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint . --fix",
    "lint:frontend": "eslint ./frontend",
    "lint:mobile": "eslint ./mobile-app",
    "lint:backend": "eslint ./backend",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "mobile-app/src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "backend/src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "backend/test/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "frontend",
    "mobile-app",
    "backend"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jiti": "^2.6.1",
    "typescript-eslint": "^8.46.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
